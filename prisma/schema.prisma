generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  number     String   @id
  timezone   Timezone
  bio        String   @default("blank")
  directive  String   @default("")
  freq       Float?
  pres       Float?
  temp       Float?
  model      Model?   @default(text)
  prompt     String?  @default("default")
  principles String?  @default("blank")
}

enum Model {
  text
  chat
}

enum Timezone {
  PST
  MST
  CST
  EST
}

model Message {
  id              Int         @id @default(autoincrement())
  content         String?
  media_url       String?
  is_outbound     Boolean?
  date            DateTime    @db.Timestamptz(6)
  number          String
  was_downgraded  Boolean?    @default(false)
  send_style      SendStyle?
  human           Boolean?
  reactions       Reactions[]
  type            Type?
  tokens          Int?
  keywords        String[]
  relevance       Int?
  group_id        Int?
  content_letters String?
  response_time   Float
  model           String?
  hour            Int?
}

enum Type {
  discuss
  announcement
  question
  summary
  help
  reset
  model
  update_profile
  customer_support
  quote
  advice
}

enum Reactions {
  Loved
  Liked
  Disliked
  Laughed
  Emphasized
  Questioned
}

enum SendStyle {
  celebration
  shooting_star
  fireworks
  lasers
  love
  confetti
  balloons
  spotlight
  echo
  invisible
  gentle
  loud
  slam
}

model Words {
  id    Int       @id @default(autoincrement())
  words String
  date  DateTime  @db.Timestamptz(6)
  type  WordsType
}

enum WordsType {
  quote
  question
  idea
}
