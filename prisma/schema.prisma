// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  number     String    @id
  name       String?
  email      String?
  timezone   String?
  most_recent DateTime? @db.Date
}

model messages {
  id             Int      @id @default(autoincrement())
  content        String?
  media_url      String?
  is_outbound    Boolean?
  date           DateTime @db.Date
  number         String?
  was_downgraded Boolean? @default(false)
  tokens         Int?
  send_style     String?
  keywords       String[]
  type           String?
  group_id       Int?
  relevance      Int?
}
