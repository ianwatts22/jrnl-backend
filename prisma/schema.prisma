// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  number      String    @id
  timezone    String?
  most_recent DateTime? @db.Timestamptz
  bio         String    @default("blank")
  model       String?
  temp        Decimal?  @db.Decimal(3, 2)
  pres        Decimal?  @db.Decimal(3, 2)
  freq        Decimal?  @db.Decimal(3, 2)
}

model messages {
  id              Int       @id @default(autoincrement())
  content         String?
  media_url       String?
  is_outbound     Boolean?
  date            DateTime? @db.Timestamptz
  number          String?
  was_downgraded  Boolean?  @default(false)
  tokens          Int?
  send_style      String?
  keywords        String[]
  type            String?
  group_id        Int?
  relevance       Int?
  reactions       String[]
  content_letters String?
  // reactions      messages[]
  // messages       messages?  @relation(fields: [messagesId], references: [id])
}
