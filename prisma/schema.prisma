generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  number   String  @id
  timezone String?
  bio      String  @default("blank")
  freq     Float?
  pres     Float?
  temp     Float?
  model    String?
}

enum Timezone {
  PST
  MST
  CST
  EST
}

model Message {
  id              Int         @id @default(autoincrement())
  content         String?
  media_url       String?
  is_outbound     Boolean?
  date            DateTime    @db.Timestamptz(6)
  number          String
  was_downgraded  Boolean?    @default(false)
  send_style      SendStyle?
  human           Boolean?
  reactions       Reactions[]
  type            Type?
  tokens          Int?
  keywords        String[]
  relevance       Int?
  group_id        Int?
  content_letters String?
  response_time   Float?
  model           String?
  hour            Int?
}

enum Type {
  discuss
  announcement
  question
  summary
  help
  reset
  update_profile
  customer_support
  quote
}

enum Reactions {
  Loved
  Liked
  Disliked
  Laughed
  Emphasized
  Questioned
}

enum SendStyle {
  celebration
  shooting_star
  fireworks
  lasers
  love
  confetti
  balloons
  spotlight
  echo
  invisible
  gentle
  loud
  slam
}
